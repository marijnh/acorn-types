{
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "acorn": ["./src/acorn.d.ts"],
      "acorn-walk": ["./src/walk.d.ts"],
      "acorn-loose": ["./src/loose.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}